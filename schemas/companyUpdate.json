{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/companyUpdate.schema.json",
  "type": "object",
  "properties": {
    "companyName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "country": {
      "type": "string"
    },
    "numEmployees": {
      "type": "integer",
      "minimum": 0
    },
    "shortDescription": {
      "type": "string"
    },
    "longDescription": {
      "type": "string"
    },
    "websiteUrl": {
      "type": "string",
      "format": "uri"
    },
    "logoUrl": {
      "type": "string",
      "format": "uri"
    },
    "mainImageUrl": {
      "type": "string",
      "format": "uri"
    },
    "lookingFor": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": []
}