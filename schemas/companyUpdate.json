{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/companyUpdate.schema.json",
  "type": "object",
  "properties": {
    "company_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "country": {
      "type": "string"
    },
    "numEmployees": {
      "type": "integer",
      "minimum": 0
    },
    "short_description": {
      "type": "string"
    },
    "long_description": {
      "type": "string"
    },
    "website_url": {
      "type": "string",
      "format": "uri"
    },
    "logoUrl": {
      "type": "string",
      "format": "uri"
    },
    "main_image_url": {
      "type": "string",
      "format": "uri"
    },
    "looking_for": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": []
}